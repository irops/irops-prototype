#!/bin/bash
#
# This script updates the Utility LinuxBastions Stack in an Environment, Core or Build VPC.
#
# This script is written in a format suitable for interactive demos,
# but can be run non-Iteractively and more quickly with the "-I" flag.
#

#  1. Initalize Environment

bindir=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
templatesdir=${bindir%/*}/templates
tmpdir=/var/tmp

step=0
speed_max=400
run_default=10
pause_default=2
next_default=5
update_default=15
update_attempts=40

interactive=1
speed=100
verbose=0
override=0
owner=${OWNER_EMAIL:-$USER@hpe.com}
company=${COMPANY_NAME:-Travel}
system=${SYSTEM_NAME:-IROPS}
environment=${ENVIRONMENT_NAME:-Production}
environment_size=${ENVIRONMENT_SIZE:-micro}
utility=${UTILITY_NAME:-LinuxBastions}
utility_domain=${UTILITY_DOMAIN:-lbastion}
key=${AWS_KEY_NAME:-administrator}
public_network=${PUBLIC_NETWORK:-0.0.0.0/0}
public_network1=${PUBLIC_NETWORK1:-}
public_network2=${PUBLIC_NETWORK2:-}
public_network3=${PUBLIC_NETWORK3:-}
private_network=${PRIVATE_NETWORK:-10.0.0.0/16}
private_network1=${PRIVATE_NETWORK1:-}
private_network2=${PRIVATE_NETWORK2:-}
private_network3=${PRIVATE_NETWORK3:-}
region=${AWS_DEFAULT_REGION:-us-west-2}
account=${AWS_ACCOUNT_ALIAS:-irops}
user=${AWS_USER_NAME:-administrator}


#  2. Define functions

usage () {
    echo "Usage: ${BASH_SOURCE##*/} [-I [-s | -f]] [-v] [-o]"
    echo "                  [-O owner] [-C company ] [-S system]"
    echo "                  [-E environment] [-Z size]"
    echo "                  [-U utility] [-D domain]"
    echo "                  [-k key]"
    echo "                  [-p network] [-P network ]"
    echo "                  [-r region ] [-a account] [-u user]"
    echo "  -I              non-interactive"
    echo "  -s              slower: increase pauses by 25%"
    echo "  -f              faster: reduce pauses by 25%"
    echo "  -v              verbose"
    echo "  -o              override StackPolicy"
    echo "  -O owner        Owner Email (default: $owner)"
    echo "  -C company      Company Name (default: $company)"
    echo "  -S system       System Name (default: $system)"
    echo "  -E environment  Environment Name (default: $environment)"
    echo "  -Z size         Environment Size (default: $environment_size)"
    echo "  -U utility      Utility Name (default: $utility)"
    echo "  -D domain       Utility Domain (default: $utility_domain)"
    echo "  -k key          Key (default: $key)"
    echo "  -p network      Public Network (default: $public_network)"
    echo "  -P network      Private Network (default: $private_network)"
    echo "  -r region       Region (default: $region)"
    echo "  -a account      Account (default: $account)"
    echo "  -u user         User (default: $user)"
}

run() {
    if [ -z $1 ] || (($1 % 25 != 0)); then
        ((seconds=run_default * speed / 100))
    else
        ((seconds=run_default * $1 * speed / 10000))
    fi
    if [ $interactive = 1 ]; then
        echo
        echo -n "Run? [Y/n/q]"
        read choice
        case "$choice" in
            "" | "y" | "Y" | "yes" | "Yes") choice=y ;;
            "n" | "N" | "no" | "No") choice=n ;;
             *) echo "cancelled"
                exit 2;;
        esac
    else
        echo
        echo -n -e "Waiting $(printf '%2d' $seconds) seconds..."
        while ((seconds > 0)); do
            if ((seconds < 10 || seconds % 10 == 0)); then
                echo -n -e "\rWaiting $(printf '%2d' $seconds) seconds..."
            fi
            sleep 1
            ((seconds--))
        done
        echo " Done"
        choice=y
    fi
}

pause() {
    if [ -z $1 ] || (($1 % 25 != 0)); then
        ((seconds=pause_default * speed / 100))
    else
        ((seconds=pause_default * $1 * speed / 10000))
    fi
    if [ $interactive = 1 ]; then
        echo "#"
        read pause
        echo -en "\033[1A\033[2K"    # undo newline from read
    else
        echo "#"
        sleep $seconds
    fi
}

next() {
    if [ -z $1 ] || (($1 % 25 != 0)); then
        ((seconds=next_default * speed / 100))
    else
        ((seconds=next_default * $1 * speed / 10000))
    fi
    if [ $interactive = 1 ]; then
        echo
        echo -n "Next? [Y/q]"
        read choice
        case "$choice" in
            "" | "y" | "Y" | "yes" | "Yes") choice=y ;;
             *) echo "cancelled"
                exit 2;;
        esac
    else
        echo
        echo -n -e "Waiting $(printf '%2d' $seconds) seconds..."
        while ((seconds > 0)); do
            if ((seconds < 10 || seconds % 10 == 0)); then
                echo -n -e "\rWaiting $(printf '%2d' $seconds) seconds..."
            fi
            sleep 1
            ((seconds--))
        done
        echo " Done"
        choice=y
    fi
}


#  3. Parse command line options
#     - Note, using options 1-9 as hidden options to set additional network ranges

while getopts IsfvoO:C:S:E:Z:U:D:k:p:4:5:6:P:7:8:9:r:a:u:? arg; do
    case $arg in
    I)  interactive=0;;
    s)  ((speed < speed_max)) && ((speed=speed+25));;
    f)  ((speed > 0)) && ((speed=speed-25));;
    v)  verbose=1;;
    o)  override=1;;
    O)  owner="$OPTARG";;
    C)  company="$OPTARG";;
    S)  system="$OPTARG";;
    E)  environment="$OPTARG";;
    Z)  environment_size="$OPTARG";;
    U)  utility="$OPTARG";;
    D)  utility_domain="$OPTARG";;
    k)  key="$OPTARG";;
    p)  public_network="$OPTARG";;
    4)  public_network1="$OPTARG";;
    5)  public_network2="$OPTARG";;
    6)  public_network3="$OPTARG";;
    P)  private_network="$OPTARG";;
    7)  private_network1="$OPTARG";;
    8)  private_network2="$OPTARG";;
    9)  private_network3="$OPTARG";;
    r)  region="$OPTARG";;
    a)  account="$OPTARG";;
    u)  user="$OPTARG";;
    ?)  usage
        exit 1;;
    esac
done

shift $(($OPTIND - 1))


#  4. Validate environment

if [ -z $owner ]; then
    echo "-O owner missing!"
    echo "Could not automatically determine owner, and it was not specified as a parameter"
    exit 10
fi

if [ -z $company ]; then
    echo "-C company missing!"
    echo "Could not automatically determine company, and it was not specified as a parameter"
    exit 12
fi

if [ -z $system ]; then
    echo "-S system missing!"
    echo "Could not automatically determine system, and it was not specified as a parameter"
    exit 14
fi

if [ -z $environment ]; then
    echo "-E environment missing!"
    echo "Could not automatically determine environment, and it was not specified as a parameter"
    exit 16
else
    case $environment in
      Production)
        use_multizone=true
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=false
        on_schedule="0 11 * * 1-5" # 11:00 UTC = 3:00 AM PST = 6:00 AM EST, Mon-Fri
        off_schedule="0 4 * * *";; # 4:00 UTC = 8:00 PM PST = 11:00 PM EST, Mon-Fri
      Staging)
        use_multizone=false
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=true
        on_schedule="0 13 * * 1-5" # 13:00 UTC = 5:00 AM PST = 8:00 AM EST, Mon-Fri
        off_schedule="0 2 * * *";; # 2:00 UTC = 6:00 PM PST = 9:00 PM EST, Mon-Fri
      Testing)
        use_multizone=false
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=true
        on_schedule="0 13 * * 1-5" # 13:00 UTC = 5:00 AM PST = 8:00 AM EST, Mon-Fri
        off_schedule="0 2 * * *";; # 2:00 UTC = 6:00 PM PST = 9:00 PM EST, Mon-Fri
      Development)
        use_multizone=false
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=true
        on_schedule="0 11 * * 1-5" # 11:00 UTC = 3:00 AM PST = 6:00 AM EST, Mon-Fri
        off_schedule="0 4 * * *";; # 4:00 UTC = 8:00 PM PST = 11:00 PM EST, Mon-Fri
      Core)
        use_multizone=false
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=false
        on_schedule="0 11 * * 1-5" # 11:00 UTC = 3:00 AM PST = 6:00 AM EST, Mon-Fri
        off_schedule="0 4 * * *";; # 4:00 UTC = 8:00 PM PST = 11:00 PM EST, Mon-Fri
      Build)
        use_multizone=false
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=true
        on_schedule="0 11 * * 1-5" # 11:00 UTC = 3:00 AM PST = 6:00 AM EST, Mon-Fri
        off_schedule="0 4 * * *";; # 4:00 UTC = 8:00 PM PST = 11:00 PM EST, Mon-Fri
      *)
        use_multizone=false
        use_static_public_address=true
        use_static_private_address=true
        use_log_monitoring=true
        use_local_users=true
        use_schedule=true
        on_schedule="0 13 * * 1-5" # 13:00 UTC = 5:00 AM PST = 8:00 AM EST, Mon-Fri
        off_schedule="0 2 * * *";; # 2:00 UTC = 6:00 PM PST = 9:00 PM EST, Mon-Fri
    esac
fi

if [ -z $environment_size ]; then
    echo "-Z size missing!"
    echo "Could not automatically determine size, and it was not specified as a parameter"
    exit 18
fi

if [ -z $utility ]; then
    echo "-U utility missing!"
    echo "Could not automatically determine utility, and it was not specified as a parameter"
    exit 20
fi

if [ -z $utility_domain ]; then
    echo "-D domain missing!"
    echo "Could not automatically determine domain, and it was not specified as a parameter"
    exit 22
fi

if [ -z $key ]; then
    echo "-K key missing!"
    echo "Could not automatically determine key, and it was not specified as a parameter"
    exit 30
fi

if [ -z $public_network ]; then
    echo "-p network missing!"
    echo "Could not automatically determine public network, and it was not specified as a parameter"
    exit 34
fi

if [ -z $private_network ]; then
    echo "-P network missing!"
    echo "Could not automatically determine private network, and it was not specified as a parameter"
    exit 36
fi

if [ -z $region ]; then
    echo "-r region missing!"
    echo "Could not automatically determine region, and it was not specified as a parameter"
    exit 50
else
    case $region in
      us-east-1)
        s3_domain=s3.amazonaws.com;;
      us-east-2|us-west-1|us-west-2|ca-central-1|sa-east-1|eu-west-1|eu-west-2|eu-central-1|ap-northeast-1|ap-northeast-2|ap-south-1|ap-southeast-1|ap-southeast-2)
        s3_domain=s3-$region.amazonaws.com;;
    *)
        echo "-r $region invalid: Please specify a valid region"
        exit 51;;
    esac
fi

if [ -z $account ]; then
    echo "-a account missing!"
    echo "Could not automatically determine account, and it was not specified as a parameter"
    exit 52
fi

if [ -z $user ]; then
    echo "-u user missing!"
    echo "Could not automatically determine user, and it was not specified as a parameter"
    exit 54
fi

profile=$account-$user

if ! grep -s -q "\[profile $profile]" ~/.aws/config; then
    echo "Could not find ($account) Account ($user) User AWSCLI profile!"
    echo "Expected to find: [profile $profile] in ~/.aws/config"
    exit 60
fi

templates_bucket=${AWS_TEMPLATES_BUCKET:-templates-$region-$account}
templates_folder=utility

if ! aws s3api head-bucket --bucket $templates_bucket --profile $profile --region $region 2> /dev/null; then
    unset templates_bucket
fi

configurations_bucket=${AWS_CONFIGURATIONS_BUCKET:-configurations-$region-$account}
configurations_folder=$utility
configurations_object=$environment-$utility-etc-hosts

if ! aws s3api head-bucket --bucket $configurations_bucket --profile $profile --region $region 2> /dev/null; then
    echo "$configurations_bucket S3 bucket does not exist!"
    exit 66
fi

if ! aws cloudformation describe-stacks --stack-name $environment-$utility \
                                        --profile $profile --region $region --output text &> /dev/null; then
    echo "Unable to update - $environment-$utility Stack does not exist!"
    exit 70
fi

# Prevent certain environment variables from breaking commands
unset AWS_DEFAULT_PROFILE
unset AWS_CREDENTIAL_FILE
unset EC2_PRIVATE_KEY
unset EC2_CERT


#  5. Run

start=$(date +%s)

((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stacks --query 'Stacks[].[StackName,StackStatus]' \\
                                   --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

if [ $verbose = 1 ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). List Existing Stacks"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        next
    fi
fi


((++step))
read -r -d '' statement << EOS
aws s3 sync $templatesdir \\
            s3://$templates_bucket/$templates_folder \\
            --exclude '*' --include 'Utility-LinuxBastions.json' --include 'Utility-LinuxBastions-StackPolicy.json' \\
            --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

if [ ! -z $templates_bucket ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). Sync Template and Policy to ($templates_bucket) Bucket"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    next 50

    echo
    echo "$run_statement"
    eval "$eval_statement"

    next 50
fi


((++step))
if [ ! -z $templates_bucket ]; then
    template_parameter="--template-url https://$s3_domain/$templates_bucket/$templates_folder/Utility-LinuxBastions.json"
    stack_policy_parameter="--stack-policy-url https://$s3_domain/$templates_bucket/$templates_folder/Utility-LinuxBastions-StackPolicy.json"
else
    template_parameter="--template-body file://$templatesdir/Utility-LinuxBastions.json"
    stack_policy_parameter="--stack-policy-body file://$templatesdir/Utility-LinuxBastions-StackPolicy.json"
fi
if [ $override = 1 ]; then
    stack_policy_parameter="$stack_policy_parameter \\"$'\n'"                                --stack-policy-during-update-body file://$templatesdir/Override-StackPolicy.json"
fi
read -r -d '' statement << EOS
aws cloudformation update-stack --stack-name $environment-$utility \\
                                $template_parameter \\
                                $stack_policy_parameter \\
                                --parameters ParameterKey=VPCStackName,ParameterValue=$environment-VPC \\
                                             ParameterKey=StandardTopicsStackName,ParameterValue=StandardTopics \\
                                             ParameterKey=KeyName,ParameterValue=$key \\
                                             ParameterKey=CompanyName,ParameterValue=$company \\
                                             ParameterKey=SystemName,ParameterValue=$system \\
                                             ParameterKey=EnvironmentSize,ParameterValue=$environment_size \\
                                             ParameterKey=ConfigurationsBucket,ParameterValue=$configurations_bucket \\
                                             ParameterKey=ConfigurationLinuxBastionsFolder,ParameterValue=$configurations_folder \\
                                             ParameterKey=ConfigurationLinuxBastionsObject,ParameterValue=$configurations_object \\
                                             ParameterKey=UtilityName,ParameterValue=$utility \\
                                             ParameterKey=UtilityDomain,ParameterValue=$utility_domain \\
                                             ParameterKey=UseMultiZone,ParameterValue=$use_multizone \\
                                             ParameterKey=UseStaticPublicAddress,ParameterValue=$use_static_public_address \\
                                             ParameterKey=UseStaticPrivateAddress,ParameterValue=$use_static_private_address \\
                                             ParameterKey=UseLogMonitoring,ParameterValue=$use_log_monitoring \\
                                             ParameterKey=UseLocalUsers,ParameterValue=$use_local_users \\
                                             ParameterKey=UseSchedule,ParameterValue=$use_schedule \\
                                             ParameterKey=OnSchedule,ParameterValue="$on_schedule" \\
                                             ParameterKey=OffSchedule,ParameterValue="$off_schedule" \\
                                             ParameterKey=PublicNetwork,ParameterValue=$public_network \\
                                             ParameterKey=PublicNetwork1,ParameterValue=$public_network1 \\
                                             ParameterKey=PublicNetwork2,ParameterValue=$public_network2 \\
                                             ParameterKey=PublicNetwork3,ParameterValue=$public_network3 \\
                                             ParameterKey=PrivateNetwork,ParameterValue=$private_network \\
                                             ParameterKey=PrivateNetwork1,ParameterValue=$private_network1 \\
                                             ParameterKey=PrivateNetwork2,ParameterValue=$private_network2 \\
                                             ParameterKey=PrivateNetwork3,ParameterValue=$private_network3 \\
                                --tags Key=Owner,Value=$owner \\
                                       Key=Company,Value=$company \\
                                       Key=System,Value=$system \\
                                       Key=Environment,Value=$environment \\
                                       Key=Utility,Value=$utility \\
                                --capabilities CAPABILITY_IAM \\
                                --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

clear
echo
echo "============================================================"
echo
echo "$(printf '%2d' $step). Update the Stack"
echo
echo "============================================================"
echo
echo "Commands:"
echo
echo "$statement"

run

if [ $choice = y ]; then
    echo
    echo "$run_statement"
    eval "$eval_statement"

    next
fi


((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stacks --stack-name $environment-$utility \\
                                   --query 'Stacks[].[StackName,StackStatus]' \\
                                   --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'} 2> /dev/null"

read -r -d '' statement2 << EOS
aws cloudformation describe-stack-events --stack-name $environment-$utility --max-items 5 \\
                                         --query 'StackEvents[].[LogicalResourceId,ResourceStatus,Timestamp]' \\
                                         --profile $profile --region $region --output table
EOS
run_statement2=$(echo "$statement2" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement2="${statement2//\\$'\n'} 2> /dev/null"

clear
echo
echo "============================================================"
echo
echo "$(printf '%2d' $step). Monitor Stack update"
echo
echo "============================================================"
echo
echo "Commands:"
echo
echo "$statement"
echo
echo "$statement2"

if [ "$(aws cloudformation describe-stacks --stack-name $environment-$utility \
                                           --query 'Stacks[].StackStatus' \
                                           --profile $profile --region $region --output text 2> /dev/null)" = "UPDATE_COMPLETE" ]; then
    echo
    tput rev
    echo "Already Complete!"
    tput sgr0

    next 50

else
    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        attempt=0
        seconds=$update_default
        while ((attempt++ <= update_attempts)); do
            echo
            echo "$run_statement2"
            eval "$eval_statement2"

            status=$(aws cloudformation describe-stacks --stack-name $environment-$utility \
                                                        --query 'Stacks[].StackStatus' \
                                                        --profile $profile --region $region --output text 2> /dev/null)
            if [ -z "$status" -o "$status" = "UPDATE_COMPLETE" -o "$status" = "UPDATE_FAILED" -o "$status" = "ROLLBACK_COMPLETE" ]; then
                break
            else
                echo
                echo -n "Not finished ($status). Waiting $seconds seconds..."
                sleep $seconds
                echo " Done"
            fi
        done

        next
    fi
fi


((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stacks --query 'Stacks[].[StackName,StackStatus]' \\
                                   --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

if [ $verbose = 1 ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). List Resulting Stacks"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        next
    fi
fi


((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stack-resources --stack-name $environment-$utility \\
                                            --query 'StackResources[].[ResourceType,LogicalResourceId,PhysicalResourceId,ResourceStatus]' \\
                                            --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'} 2> /dev/null"

if [ $verbose = 1 ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). List Resulting Stack Resources"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        next
    fi
fi

end=$(date +%s)

echo
case $(uname) in
  Darwin)
    echo "(time: $(date -u -r $((end-start)) +"%T"))";;
  *)
    echo "(time: $(date -u -d @$((end-start)) +"%T"))";;
esac
