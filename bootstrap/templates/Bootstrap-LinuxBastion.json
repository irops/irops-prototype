      "Export" : { "Name" : { "Fn::Sub" : "${AWS::StackName}-SecurityGroup" }}
    },

    "EIP" : {
      "Description" : "The Public Address of the Bastion",
      "Value" : { "Ref" : "EIP" },
      "Export" : { "Name" : { "Fn::Sub" : "${AWS::StackName}-EIP" }}
    },

    "HomeVolume" : {
      "Description" : "The Volume containing Home directories",
