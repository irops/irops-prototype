      "Value" : { "Ref" : "EIP" },
      "Export" : { "Name" : { "Fn::Sub" : "${AWS::StackName}-EIP" }}
    },

    "HomeVolume" : {
      "Description" : "The Volume containing Home directories",
      "Value" : { "Ref" : "HomeVolume" },
      "Export" : { "Name" : { "Fn::Sub" : "${AWS::StackName}-HomeVolume" }},
      "Condition" : "ConfigureStaticHomeVolume"
    }
  }
