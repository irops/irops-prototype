      "Type" : "String",
      "Default" : "AMZN",
      "AllowedValues" : [ "AMZN", "RHEL", "UBNT" ],
      "ConstraintDescription" : "must be AMZN = \"Amazon Linux 2016.09.1\", RHEL = \"RHEL 7.3\" or UBNT = \"Ubuntu 16.04\"."
