      "Type" : "String",
      "MaxLength" : 64,
      "Default" : "example",
      "AllowedPattern" : "^[-a-zA-Z0-9]*$",
      "ConstraintDescription" : "must contain alphanumeric characters and dashes."
    },

    "CompanyName" : {
