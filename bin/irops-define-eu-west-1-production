#!/bin/bash
#
# Defines the IROPS Environment Variables for the Production Environment in Ireland

# Account
export AWS_ACCOUNT_ALIAS=irops
export AWS_ACCOUNT_NUMBER=624812452220

# User
export AWS_USER_NAME=$USER

# Profile
export AWS_DEFAULT_PROFILE=$AWS_ACCOUNT_ALIAS-$AWS_USER_NAME

# Region
export AWS_DEFAULT_REGION=eu-west-1

# Keys (let user override, but by default, use key that's defined in shell scripts)
#export AWS_KEY_NAME=administrator
#export AWS_KEY_FILE=${HOME}/.ssh/irops_${AWS_KEY_NAME}_id_rsa

# Notification
export SNS_ADMINISTRATOR_TOPIC="arn:aws:sns:${AWS_DEFAULT_REGION}:${AWS_ACCOUNT_NUMBER}:Administrators"
export SNS_EVENTS_TOPIC="arn:aws:sns:${AWS_DEFAULT_REGION}:${AWS_ACCOUNT_NUMBER}:Events"
export SNS_ALARMS_TOPIC="arn:aws:sns:${AWS_DEFAULT_REGION}:${AWS_ACCOUNT_NUMBER}:Alarms"

# Network (new names, not yet in driver scripts consistently)
export PUBLIC_ADMINISTRATOR_NETWORK=72.215.187.176/28  # Santa Barbara Public IP Range (Michael Crawford's House)
export PUBLIC_ADMINISTRATOR_NETWORK1=204.26.128.0/17   # Charlotte Public/Private IP Range
export PUBLIC_ADMINISTRATOR_NETWORK2=174.76.114.250/32 # Goleta Public IP for internal/vpn user outbound traffic
export PUBLIC_ADMINISTRATOR_NETWORK3=
export PRIVATE_ADMINISTRATOR_NETWORK=10.0.0.0/16       # Santa Barbara Private IP Range (Michael Crawford's House)
export PRIVATE_ADMINISTRATOR_NETWORK1=204.26.128.0/17  # Charlotte Public/Private IP Range
export PRIVATE_ADMINISTRATOR_NETWORK2=
export PRIVATE_ADMINISTRATOR_NETWORK3=
export PUBLIC_USER_NETWORK=72.215.187.176/28         # Santa Barbara Public IP Range (Michael Crawford's House)
export PUBLIC_USER_NETWORK1=204.26.128.0/17          # Charlotte Public/Private IP Range
export PUBLIC_USER_NETWORK2=174.76.114.250/32        # Goleta Public IP for internal/vpn user outbound traffic
export PUBLIC_USER_NETWORK3=
export PRIVATE_USER_NETWORK=10.0.0.0/16              # Santa Barbara Private IP Range (Michael Crawford's House)
export PRIVATE_USER_NETWORK1=204.26.128.0/17         # Charlotte Public/Private IP Range
export PRIVATE_USER_NETWORK2=
export PRIVATE_USER_NETWORK3=

# Network (old names, preserve until I can propagate new names)
export ADMINISTRATOR_NETWORK=72.215.187.176/28  # Santa Barbara Public IP Range (Michael Crawford's House)
export ADMINISTRATOR_NETWORK1=204.26.128.0/17   # Charlotte Public/Private IP Range
export ADMINISTRATOR_NETWORK2=174.76.114.250/32 # Goleta Public IP for internal/vpn user outbound traffic
export ADMINISTRATOR_NETWORK3=
export PUBLIC_NETWORK=72.215.187.176/28         # Santa Barbara Public IP Range (Michael Crawford's House)
export PUBLIC_NETWORK1=204.26.128.0/17          # Charlotte Public/Private IP Range
export PUBLIC_NETWORK2=174.76.114.250/32        # Goleta Public IP for internal/vpn user outbound traffic
export PUBLIC_NETWORK3=
export PRIVATE_NETWORK=10.0.0.0/16              # Santa Barbara Private IP Range (Michael Crawford's House)
export PRIVATE_NETWORK1=204.26.128.0/17         # Charlotte Public/Private IP Range
export PRIVATE_NETWORK2=
export PRIVATE_NETWORK3=

# Owner
export OWNER_EMAIL=$USER@hpe.com

# Company
export COMPANY_CODE=tvl
export COMPANY_NAME="Travel"

# Location
case $AWS_DEFAULT_REGION in
  us-east-1)
    export LOCATION_CODE=ue1
    export LOCATION_NAME="US-East-1";;
  us-east-2)
    export LOCATION_CODE=ue2
    export LOCATION_NAME="US-East-2";;
  us-west-1)
    export LOCATION_CODE=uw1
    export LOCATION_NAME="US-West-1";;
  us-west-2)
    export LOCATION_CODE=uw2
    export LOCATION_NAME="US-West-2";;
  eu-west-1)
    export LOCATION_CODE=ew1
    export LOCATION_NAME="EU-West-1";;
  eu-west-2)
    export LOCATION_CODE=ew2
    export LOCATION_NAME="EU-West-2";;
  *)
    echo "UNSUPPORTED REGION!"
    exit 1;;
esac

# System
export SYSTEM_CODE=irops
export SYSTEM_NAME="IROPS"

# Environment
export ENVIRONMENT_CODE=p
export ENVIRONMENT_NAME="Production"
export ENVIRONMENT_DOMAIN=$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export ENVIRONMENT_NETWORK=172.21.128.0/21
export ENVIRONMENT_SIZE=medium

# Core
export CORE_CODE=c
export CORE_NAME="Core"
export CORE_DOMAIN=$CORE_CODE.$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export CORE_NETWORK=172.21.184.0/22
export CORE_SIZE=small

# Build
export BUILD_CODE=b
export BUILD_NAME="Build"
export BUILD_DOMAIN=$BUILD_CODE.$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export BUILD_NETWORK=172.21.188.0/23
export BUILD_SIZE=small

# Identity
export IDENTITY_CODE=i
export IDENTITY_NAME="Identity"
export IDENTITY_DOMAIN=$IDENTITY_CODE.us-east-1.$COMPANY_CODE.iropshub.com
export IDENTITY_NETWORK=172.21.62.0/23
export IDENTITY_SIZE=small

# Gateway
export GATEWAY_CODE=clt
export GATEWAY_NAME="Charlotte"
export GATEWAY_ASN=65000
export GATEWAY_ADDRESS=204.26.253.5
export GATEWAY_NETWORK=204.26.128.0/17
