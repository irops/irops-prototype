#!/bin/bash
#
# Defines the IROPS Environment Variables for the Production Environment in Ohio

# Account
export AWS_ACCOUNT_ALIAS=irops
export AWS_ACCOUNT_NUMBER=624812452220

# User
export AWS_USER_NAME=$USER

# Profile
export AWS_DEFAULT_PROFILE=$AWS_ACCOUNT_ALIAS-$AWS_USER_NAME

# Region
export AWS_DEFAULT_REGION=us-east-2

# Keys
export AWS_KEY_NAME=$USER
export AWS_KEY_FILE=${HOME}/.ssh/irops_${AWS_KEY_NAME}_id_rsa

# Notification
export SNS_ADMINISTRATOR_TOPIC="arn:aws:sns:${AWS_DEFAULT_REGION}:${AWS_ACCOUNT_NUMBER}:Administrators"
export SNS_EVENTS_TOPIC="arn:aws:sns:${AWS_DEFAULT_REGION}:${AWS_ACCOUNT_NUMBER}:Events"
export SNS_ALARMS_TOPIC="arn:aws:sns:${AWS_DEFAULT_REGION}:${AWS_ACCOUNT_NUMBER}:Alarms"

# Owner
export OWNER_EMAIL=$USER@hpe.com

# Network
export ADMINISTRATOR_NETWORK=72.215.187.176/28
export ADMINISTRATOR_NETWORK1=
export ADMINISTRATOR_NETWORK2=
export ADMINISTRATOR_NETWORK3=
export PUBLIC_NETWORK=72.215.187.176/28
export PUBLIC_NETWORK1=
export PUBLIC_NETWORK2=
export PUBLIC_NETWORK3=
export PRIVATE_NETWORK=10.0.0.0/16
export PRIVATE_NETWORK1=
export PRIVATE_NETWORK2=
export PRIVATE_NETWORK3=

# Owner
export OWNER_EMAIL=$USER@hpe.com

# Company
export COMPANY_CODE=demo
export COMPANY_NAME="Demo"

# Location
case $AWS_DEFAULT_REGION in
  us-east-1)
    export LOCATION_CODE=ue1
    export LOCATION_NAME="US-East-1";;
  us-east-2)
    export LOCATION_CODE=ue2
    export LOCATION_NAME="US-East-2";;
  us-west-1)
    export LOCATION_CODE=uw1
    export LOCATION_NAME="US-West-1";;
  us-west-2)
    export LOCATION_CODE=uw2
    export LOCATION_NAME="US-West-2";;
  *)
    echo "UNSUPPORTED REGION!"
    exit 1;;
esac

# System
export SYSTEM_CODE=irops
export SYSTEM_NAME="IROPS"

# Environment
export ENVIRONMENT_CODE=p
export ENVIRONMENT_NAME="Production"
export ENVIRONMENT_DOMAIN=$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export ENVIRONMENT_NETWORK=10.80.0.0/16

# Core
export CORE_CODE=c
export CORE_NAME="Core"
export CORE_DOMAIN=$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export CORE_NETWORK=10.86.0.0/16

# Build
export BUILD_CODE=b
export BUILD_NAME="Build"
export BUILD_DOMAIN=$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export BUILD_NETWORK=10.87.0.0/16

# Identity
export IDENTITY_CODE=i
export IDENTITY_NAME="Identity"
export IDENTITY_DOMAIN=$AWS_DEFAULT_REGION.$COMPANY_CODE.iropshub.com
export IDENTITY_NETWORK=10.255.0.0/16

# Gateway
export GATEWAY_CODE=clt
export GATEWAY_NAME="Charlotte"
export GATEWAY_ASN=65000
export GATEWAY_ADDRESS=204.26.253.5
export GATEWAY_NETWORK=204.26.128.0/17
