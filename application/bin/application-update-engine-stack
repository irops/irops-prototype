#!/bin/bash
#
# This script updates the Application Engine Stack in an Environment Account.
#
# This script is written in a format suitable for interactive demos,
# but can be run non-Iteractively and more quickly with the "-I" flag.
#

#  1. Initalize Environment

bindir=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
templatesdir=${bindir%/*}/templates
tmpdir=/var/tmp

step=0
speed_max=400
run_default=10
pause_default=2
next_default=5
update_default=15
update_attempts=40

interactive=1
speed=100
verbose=0
override=0
dummy=0
owner=${OWNER_EMAIL:-$USER@hpe.com}
company=${COMPANY_NAME:-Travel}
system=${SYSTEM_NAME:-IROPS}
environment=${ENVIRONMENT_NAME:-Production}
environment_size=${ENVIRONMENT_SIZE:-medium}
application=${APPLICATION_NAME:-Engine}
application_domain=${APPLICATION_DOMAIN:-engine}
application_version=${APPLICATION_VERSION:-1.0.0}
key=${AWS_KEY_NAME:-user}
public_user_network=${PUBLIC_USER_NETWORK:-0.0.0.0/0}
public_user_network1=${PUBLIC_USER_NETWORK1:-}
public_user_network2=${PUBLIC_USER_NETWORK2:-}
private_user_network=${PRIVATE_USER_NETWORK:-10.0.0.0/16}
private_user_network1=${PRIVATE_USER_NETWORK1:-}
private_user_network2=${PRIVATE_USER_NETWORK2:-}
private_administrator_network=${PRIVATE_ADMINISTRATOR_NETWORK:-10.0.0.0/16}
private_administrator_network1=${PRIVATE_ADMINISTRATOR_NETWORK1:-}
private_administrator_network2=${PRIVATE_ADMINISTRATOR_NETWORK2:-}
region=${AWS_DEFAULT_REGION:-us-west-2}
account=${AWS_ACCOUNT_ALIAS:-irops}
user=${AWS_USER_NAME:-administrator}


#  2. Define functions

usage () {
    echo "Usage: ${BASH_SOURCE##*/} [-I [-s | -f]] [-v] [-o]"
    echo "                  [-O owner] [-C company ] [-S system]"
    echo "                  [-E environment] [-Z size]"
    echo "                  [-A application ] [-D domain] [-V version]"
    echo "                  [-k key]"
    echo "                  [-p network]"
    echo "                  [-n network] [-N network ]"
    echo "                  [-r region ] [-a account] [-u user]"
    echo "  -I              non-interactive"
    echo "  -s              slower: increase pauses by 25%"
    echo "  -f              faster: reduce pauses by 25%"
    echo "  -v              verbose"
    echo "  -o              override StackPolicy"
    echo "  -O owner        Owner Email (default: $owner)"
    echo "  -C company      Company Name (default: $company)"
    echo "  -S system       System Name (default: $system)"
    echo "  -E environment  Environment Name (default: $environment)"
    echo "  -Z size         Environment Size (default: $environment_size)"
    echo "  -A application  Application Name (default: $application)"
    echo "  -D domain       Application Domain (default: $application_domain)"
    echo "  -V version      Application Version (default: $application_version)"
    echo "  -k key          Key (default: $key)"
    echo "  -p network      Public User Network (default: $public_user_network)"
    echo "  -n network      Private User Network (default: $private_user_network)"
    echo "  -N network      Private Administrator Network (default: $private_administrator_network)"
    echo "  -r region       Region (default: $region)"
    echo "  -a account      Account (default: $account)"
    echo "  -u user         User (default: $user)"
}

run() {
    if [ -z $1 ] || (($1 % 25 != 0)); then
        ((seconds=run_default * speed / 100))
    else
        ((seconds=run_default * $1 * speed / 10000))
    fi
    if [ $interactive = 1 ]; then
        echo
        echo -n "Run? [Y/n/q]"
        read choice
        case "$choice" in
            "" | "y" | "Y" | "yes" | "Yes") choice=y ;;
            "n" | "N" | "no" | "No") choice=n ;;
             *) echo "cancelled"
                exit 2;;
        esac
    else
        echo
        echo -n -e "Waiting $(printf '%2d' $seconds) seconds..."
        while ((seconds > 0)); do
            if ((seconds < 10 || seconds % 10 == 0)); then
                echo -n -e "\rWaiting $(printf '%2d' $seconds) seconds..."
            fi
            sleep 1
            ((seconds--))
        done
        echo " Done"
        choice=y
    fi
}

pause() {
    if [ -z $1 ] || (($1 % 25 != 0)); then
        ((seconds=pause_default * speed / 100))
    else
        ((seconds=pause_default * $1 * speed / 10000))
    fi
    if [ $interactive = 1 ]; then
        echo "#"
        read pause
        echo -en "\033[1A\033[2K"    # undo newline from read
    else
        echo "#"
        sleep $seconds
    fi
}

next() {
    if [ -z $1 ] || (($1 % 25 != 0)); then
        ((seconds=next_default * speed / 100))
    else
        ((seconds=next_default * $1 * speed / 10000))
    fi
    if [ $interactive = 1 ]; then
        echo
        echo -n "Next? [Y/q]"
        read choice
        case "$choice" in
            "" | "y" | "Y" | "yes" | "Yes") choice=y ;;
             *) echo "cancelled"
                exit 2;;
        esac
    else
        echo
        echo -n -e "Waiting $(printf '%2d' $seconds) seconds..."
        while ((seconds > 0)); do
            if ((seconds < 10 || seconds % 10 == 0)); then
                echo -n -e "\rWaiting $(printf '%2d' $seconds) seconds..."
            fi
            sleep 1
            ((seconds--))
        done
        echo " Done"
        choice=y
    fi
}


#  3. Parse command line options
#     - Note, using options 1-8 as hidden options to set additional network ranges

while getopts IsfvO:C:S:E:Z:A:D:V:k:p:1:2:n:5:6:N:7:8:r:a:u:? arg; do
    case $arg in
    I)  interactive=0;;
    s)  ((speed < speed_max)) && ((speed=speed+25));;
    f)  ((speed > 0)) && ((speed=speed-25));;
    v)  verbose=1;;
    o)  override=1;;
    O)  owner="$OPTARG";;
    C)  company="$OPTARG";;
    S)  system="$OPTARG";;
    E)  environment="$OPTARG";;
    Z)  environment_size="$OPTARG";;
    A)  application="$OPTARG";;
    D)  application_domain="$OPTARG";;
    V)  application_version="$OPTARG";;
    k)  key="$OPTARG";;
    p)  public_user_network="$OPTARG";;
    1)  public_user_network1="$OPTARG";;
    2)  public_user_network2="$OPTARG";;
    n)  private_user_network="$OPTARG";;
    5)  private_user_network1="$OPTARG";;
    6)  private_user_network2="$OPTARG";;
    N)  private_administrator_network="$OPTARG";;
    7)  private_administrator_network1="$OPTARG";;
    8)  private_administrator_network2="$OPTARG";;
    r)  region="$OPTARG";;
    a)  account="$OPTARG";;
    u)  user="$OPTARG";;
    ?)  usage
        exit 1;;
    esac
done

shift $(($OPTIND - 1))


#  4. Validate environment

if [ -z $owner ]; then
    echo "-O owner missing!"
    echo "Could not automatically determine owner, and it was not specified as a parameter"
    exit 10
fi

if [ -z $company ]; then
    echo "-C company missing!"
    echo "Could not automatically determine company, and it was not specified as a parameter"
    exit 12
else
    case $company in
      Travel)
        ;;
      *)
        echo "-C $company invalid! Must be Travel"
        exit 13;;
    esac
fi

if [ -z $system ]; then
    echo "-S system missing!"
    echo "Could not automatically determine system, and it was not specified as a parameter"
    exit 14
else
    case $system in
      IROPS)
        ;;
      *)
        echo "-S $system invalid! Must be IROPS"
        exit 15;;
    esac
fi

if [ -z $environment ]; then
    echo "-E environment missing!"
    echo "Could not automatically determine environment, and it was not specified as a parameter"
    exit 16
else
    case $environment in
      Production)
        linux_os_name="RHEL 7.3"
        windows_os_name="Windows Server 2012 R2"
        use_static_address=false
        log_retention=30
        schedule="";;  # 11:00 - 4:00 UTC = 3:00 AM - 8:00 PM PST = 6:00 AM - 11:00 PM EST
      Staging)
        linux_os_name="Amazon Linux 2017.03.0"
        windows_os_name="Windows Server 2012 R2"
        use_static_address=false
        log_retention=7
        schedule="";;  # 11:00 - 4:00 UTC = 3:00 AM - 8:00 PM PST = 6:00 AM - 11:00 PM EST
      Testing)
        linux_os_name="Amazon Linux 2017.03.0"
        windows_os_name="Windows Server 2012 R2"
        use_static_address=false
        log_retention=0
        schedule="13:00-2:00";; # 13:00 - 2:00 UTC = 5:00 AM - 6:00 PM PST = 8:00 AM - 9:00 PM EST
      Development)
        linux_os_name="Amazon Linux"
        windows_os_name="Windows Server 2016"
        use_static_address=false
        log_retention=0
        schedule="";; # 13:00 - 2:00 UTC = 5:00 AM - 6:00 PM PST = 8:00 AM - 9:00 PM EST
      *)
        echo "-E $environment invalid! Must be Production, Staging, Testing or Development"
        exit 17;;
    esac
fi

if [ -z $environment_size ]; then
    echo "-Z size missing!"
    echo "Could not automatically determine size, and it was not specified as a parameter"
    exit 18
else
    case $environment_size in
      small|medium|large|xlarge)
        ;;
      *)
        echo "-Z $environment_size invalid! Must be small, medium, large or xlarge"
        exit 19;;
    esac
fi

if [ -z $application ]; then
    echo "-A application missing!"
    echo "Could not automatically determine application, and it was not specified as a parameter"
    exit 20
else
    case $application in
      Engine)
        ;;
      *)
        echo "-A $application invalid! Must be Engine"
        exit 21;;
    esac
fi

if [ -z $application_domain ]; then
    echo "-D domain missing!"
    echo "Could not automatically determine domain, and it was not specified as a parameter"
    exit 22
fi

if [ -z $application_version ]; then
    echo "-V version missing!"
    echo "Could not automatically determine version, and it was not specified as a parameter"
    exit 24
fi

if [ -z $key ]; then
    echo "-k key missing!"
    echo "Could not automatically determine key, and it was not specified as a parameter"
    exit 30
fi

if [ -z $public_user_network ]; then
    echo "-p network missing!"
    echo "Could not automatically determine public user network, and it was not specified as a parameter"
    exit 40
fi

if [ -z $private_user_network ]; then
    echo "-n network missing!"
    echo "Could not automatically determine private user network, and it was not specified as a parameter"
    exit 44
fi

if [ -z $private_administrator_network ]; then
    echo "-N network missing!"
    echo "Could not automatically determine private administrator network, and it was not specified as a parameter"
    exit 46
fi

if [ -z $region ]; then
    echo "-r region missing!"
    echo "Could not automatically determine region, and it was not specified as a parameter"
    exit 50
else
    case $region in
      us-east-1)
        s3_domain=s3.amazonaws.com;;
      us-east-2|us-west-1|us-west-2|ca-central-1|eu-west-1|eu-central-1|eu-west-2|ap-southeast-1|ap-southeast-2|ap-northeast-2|ap-northeast-1|ap-south-1|sa-east-1)
        s3_domain=s3-$region.amazonaws.com;;
      *)
        echo "-r $region invalid: Please specify a valid region"
        exit 51;;
    esac
fi

if [ -z $account ]; then
    echo "-a account missing!"
    echo "Could not automatically determine account, and it was not specified as a parameter"
    exit 52
fi

if [ -z $user ]; then
    echo "-u user missing!"
    echo "Could not automatically determine user, and it was not specified as a parameter"
    exit 54
fi

profile=$account-$user

if ! grep -s -q "\[profile $profile]" ~/.aws/config; then
    echo "Could not find ($account) Account ($user) User AWSCLI profile!"
    echo "Expected to find: [profile $profile] in ~/.aws/config"
    exit 60
fi

templates_bucket=${AWS_TEMPLATES_BUCKET:-templates-$region-$account}
template_folder=application

if ! aws s3api head-bucket --bucket $templates_bucket --profile $profile --region $region 2> /dev/null; then
    echo "$templates_bucket S3 bucket does not exist!"
    exit 62
fi

# Not sure how this will work yet, so leaving as placeholder
products_bucket=${AWS_PRODUCTS_BUCKET:-products-$region-$account}
product_folder=Engine
#calculation_product_object=Engine-Calculation-Unknown.zip
#mongodb_product_object=Engine-MongoDB-Unknown.zip
#rabbitmq_product_object=Engine-RabbitMQ-Unknown.zip
#datastaging_product_object=Engine-DataStaging-Unknown.zip
#logging_product_object=Engine-Logging-Unknown.zip
#deployment_product_object=Engine-Deployment-Unknown.zip
#publish_product_object=Engine-Publish-Unknown.zip
calculation_product_object=""
mongodb_product_object=""
rabbitmq_product_object=""
datastaging_product_object=""
logging_product_object=""
deployment_product_object=""
publish_product_object=""

if ! aws s3api head-bucket --bucket $products_bucket --profile $profile --region $region 2> /dev/null; then
    echo "$products_bucket S3 bucket does not exist!"
    exit 64
fi

# Not sure how this will work yet, so leaving as placeholder
configurations_bucket=${AWS_CONFIGURATIONS_BUCKET:-configurations-$region-$account}
configuration_folder=Engine
#web_configuration_object=$environment-Engine-Web.zip
#calculation_configuration_object=$environment-Engine-Calculation.zip
#mongodb_configuration_object=$environment-Engine-MongoDB.zip
#rabbitmq_configuration_object=$environment-Engine-RabbitMQ.zip
#datastaging_configuration_object=$environment-Engine-DataStaging.zip
#logging_configuration_object=$environment-Engine-Logging.zip
#deplpyment_configuration_object=$environment-Engine-Deployment.zip
#publish_configuration_object=$environment-Engine-Publish.zip
web_configuration_object=""
calculation_configuration_object=""
mongodb_configuration_object=""
rabbitmq_configuration_object=""
datastaging_configuration_object=""
logging_configuration_object=""
deplpyment_configuration_object=""
publish_configuration_object=""

if ! aws s3api head-bucket --bucket $configurations_bucket --profile $profile --region $region 2> /dev/null; then
    echo "$configurations_bucket S3 bucket does not exist!"
    exit 66
fi

# Not sure how this will work yet, so leaving as placeholder
applications_bucket=${AWS_APPLICATIONS_BUCKET:-applications-$region-$account}
application_folder=Engine
#web_application_object=Engine-Web-$application_version.zip
#calculation_application_object=Engine-Calculation-$application_version.zip
#mongodb_application_object=Engine-MongoDB-$application_version.zip
#rabbitmq_application_object=Engine-RabbitMQ-$application_version.zip
#datastaging_application_object=Engine-DataStaging-$application_version.zip
#logging_application_object=Engine-Logging-$application_version.zip
#deployment_application_object=Engine-Deployment-$application_version.zip
#publish_application_object=Engine-Publish-$application_version.zip
web_application_object=""
calculation_application_object=""
mongodb_application_object=""
rabbitmq_application_object=""
datastaging_application_object=""
logging_application_object=""
deployment_application_object=""
publish_application_object=""

if ! aws s3api head-bucket --bucket $applications_bucket --profile $profile --region $region 2> /dev/null; then
    echo "$applications_bucket S3 bucket does not exist!"
    exit 68
fi

if ! aws cloudformation describe-stacks --stack-name $environment-$application \
                                        --profile $profile --region $region --output text &> /dev/null; then
    echo "Unable to update - $environment-$application Stack does not exist!"
    exit 70
fi

# Prevent certain environment variables from breaking commands
unset AWS_DEFAULT_PROFILE
unset AWS_CREDENTIAL_FILE
unset EC2_PRIVATE_KEY
unset EC2_CERT


#  5. Run

start=$(date +%s)

((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stacks --query 'Stacks[].[StackName,StackStatus]' \\
                                   --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

if [ $verbose = 1 ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). List Existing Stacks"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        next
    fi
fi


((++step))
read -r -d '' statement << EOS
aws s3 sync $templatesdir \\
            s3://$templates_bucket/$template_folder \\
            --exclude '*' --include 'Application-Engine.json' --include 'Application-Engine-StackPolicy.json' \\
            --include 'Application-Engine-Roles.json' \\
            --include 'Application-Engine-Logs.json' \\
            --include 'Application-Engine-SecurityGroups.json' \\
            --include 'Application-Engine-LoadBalancers.json' \\
            --include 'Application-Engine-WebInstances.json' \\
            --include 'Application-Engine-CalculationInstances.json' \\
            --include 'Application-Engine-MongoDBInstances.json' \\
            --include 'Application-Engine-RabbitMQInstances.json' \\
            --include 'Application-Engine-DataStagingInstances.json' \\
            --include 'Application-Engine-LoggingInstances.json' \\
            --include 'Application-Engine-DeploymentInstances.json' \\
            --include 'Application-Engine-PublishInstances.json' \\
            --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

clear
echo
echo "============================================================"
echo
echo "$(printf '%2d' $step). Sync Template and Policy to ($templates_bucket) Bucket"
echo
echo "============================================================"
echo
echo "Commands:"
echo
echo "$statement"

next 50

echo
echo "$run_statement"
eval "$eval_statement"

next 50


((++step))
if [ $dummy = 1 ]; then
    # unset download location, which triggers creation of dummy application page within the template
    unset applications_bucket
fi

template_parameter="--template-url https://$s3_domain/$templates_bucket/$template_folder/Application-Engine.json"
stack_policy_parameter="--stack-policy-url https://$s3_domain/$templates_bucket/$template_folder/Application-Engine-StackPolicy.json"
if [ $override = 1 ]; then
    stack_policy_parameter="$stack_policy_parameter \\"$'\n'"                                --stack-policy-during-update-body file://$templatesdir/Override-StackPolicy.json"
fi
read -r -d '' statement << EOS
aws cloudformation update-stack --stack-name $environment-$application \\
                                $template_parameter \\
                                $stack_policy_parameter \\
                                --parameters ParameterKey=VPNStackName,ParameterValue=$environment-OpenVPNAS \\
                                             ParameterKey=VPCStackName,ParameterValue=$environment-VPC \\
                                             ParameterKey=CustomIdentifierFunctionsStackName,ParameterValue=CustomIdentifierFunctions \\
                                             ParameterKey=StandardCIDRFunctionsStackName,ParameterValue=StandardCIDRFunctions \\
                                             ParameterKey=StandardAMIFunctionsStackName,ParameterValue=StandardAMIFunctions \\
                                             ParameterKey=StandardTopicsStackName,ParameterValue=StandardTopics \\
                                             ParameterKey=KeyName,ParameterValue=$key \\
                                             ParameterKey=TemplatesBucket,ParameterValue=$templates_bucket \\
                                             ParameterKey=TemplateFolder,ParameterValue=$template_folder \\
                                             ParameterKey=CompanyName,ParameterValue=$company \\
                                             ParameterKey=SystemName,ParameterValue=$system \\
                                             ParameterKey=EnvironmentSize,ParameterValue=$environment_size \\
                                             ParameterKey=LinuxOSName,ParameterValue="$linux_os_name" \\
                                             ParameterKey=WindowsOSName,ParameterValue="$windows_os_name" \\
                                             ParameterKey=ProductsBucket,ParameterValue=$products_bucket \\
                                             ParameterKey=ProductFolder,ParameterValue=$product_folder \\
                                             ParameterKey=CalculationProductObject,ParameterValue=$calculation_product_object \\
                                             ParameterKey=MongoDBProductObject,ParameterValue=$mongodb_product_object \\
                                             ParameterKey=RabbitMQProductObject,ParameterValue=$rabbitmq_product_object \\
                                             ParameterKey=DataStagingProductObject,ParameterValue=$datastaging_product_object \\
                                             ParameterKey=LoggingProductObject,ParameterValue=$logging_product_object \\
                                             ParameterKey=DeploymentProductObject,ParameterValue=$deployment_product_object \\
                                             ParameterKey=PublishProductObject,ParameterValue=$publish_product_object \\
                                             ParameterKey=ConfigurationsBucket,ParameterValue=$configurations_bucket \\
                                             ParameterKey=ConfigurationFolder,ParameterValue=$configuration_folder \\
                                             ParameterKey=WebConfigurationObject,ParameterValue=$web_configuration_object \\
                                             ParameterKey=CalculationConfigurationObject,ParameterValue=$calculation_configuration_object \\
                                             ParameterKey=MongoDBConfigurationObject,ParameterValue=$mongodb_configuration_object \\
                                             ParameterKey=RabbitMQConfigurationObject,ParameterValue=$rabbitmq_configuration_object \\
                                             ParameterKey=DataStagingConfigurationObject,ParameterValue=$datastaging_configuration_object \\
                                             ParameterKey=LoggingConfigurationObject,ParameterValue=$logging_configuration_object \\
                                             ParameterKey=DeploymentConfigurationObject,ParameterValue=$deployment_configuration_object \\
                                             ParameterKey=PublishConfigurationObject,ParameterValue=$publish_configuration_object \\
                                             ParameterKey=ApplicationsBucket,ParameterValue=$applications_bucket \\
                                             ParameterKey=ApplicationFolder,ParameterValue=$application_folder \\
                                             ParameterKey=WebApplicationObject,ParameterValue=$eng_web_application_object \\
                                             ParameterKey=CalculationApplicationObject,ParameterValue=$calculation_application_object \\
                                             ParameterKey=MongoDBApplicationObject,ParameterValue=$mongodb_application_object \\
                                             ParameterKey=RabbitMQApplicationObject,ParameterValue=$rabbitmq_application_object \\
                                             ParameterKey=DataStagingApplicationObject,ParameterValue=$datastaging_application_object \\
                                             ParameterKey=LoggingApplicationObject,ParameterValue=$logging_application_object \\
                                             ParameterKey=DeploymentApplicationObject,ParameterValue=$deployment_application_object \\
                                             ParameterKey=PublishApplicationObject,ParameterValue=$publish_application_object \\
                                             ParameterKey=ApplicationName,ParameterValue=$application \\
                                             ParameterKey=ApplicationDomain,ParameterValue=$application_domain \\
                                             ParameterKey=ApplicationVersion,ParameterValue=$application_version \\
                                             ParameterKey=UseStaticAddress,ParameterValue=$use_static_address \\
                                             ParameterKey=LogRetention,ParameterValue=$log_retention \\
                                             ParameterKey=Schedule,ParameterValue=$schedule \\
                                             ParameterKey=PublicUserNetwork,ParameterValue=$public_user_network \\
                                             ParameterKey=PublicUserNetwork1,ParameterValue=$public_user_network1 \\
                                             ParameterKey=PublicUserNetwork2,ParameterValue=$public_user_network2 \\
                                             ParameterKey=PrivateUserNetwork,ParameterValue=$private_user_network \\
                                             ParameterKey=PrivateUserNetwork1,ParameterValue=$private_user_network1 \\
                                             ParameterKey=PrivateUserNetwork2,ParameterValue=$private_user_network2 \\
                                             ParameterKey=PrivateAdministratorNetwork,ParameterValue=$private_administrator_network \\
                                             ParameterKey=PrivateAdministratorNetwork1,ParameterValue=$private_administrator_network1 \\
                                             ParameterKey=PrivateAdministratorNetwork2,ParameterValue=$private_administrator_network2 \\
                                --tags Key=Owner,Value=$owner \\
                                       Key=Company,Value=$company \\
                                       Key=System,Value=$system \\
                                       Key=Environment,Value=$environment \\
                                       Key=Application,Value=$application \\
                                --capabilities CAPABILITY_IAM \\
                                --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'}"

clear
echo
echo "============================================================"
echo
echo "$(printf '%2d' $step). Update the Stack"
echo
echo "============================================================"
echo
echo "Commands:"
echo
echo "$statement"

run

if [ $choice = y ]; then
    echo
    echo "$run_statement"
    eval "$eval_statement"

    next
fi


((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stacks --stack-name $environment-$application \\
                                   --query 'Stacks[].[StackName,StackStatus]' \\
                                   --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'} 2> /dev/null"

read -r -d '' statement2 << EOS
aws cloudformation describe-stack-events --stack-name $environment-$application --max-items 5 \\
                                         --query 'StackEvents[].[LogicalResourceId,ResourceStatus,Timestamp]' \\
                                         --profile $profile --region $region --output table
EOS
run_statement2=$(echo "$statement2" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement2="${statement2//\\$'\n'} 2> /dev/null"

clear
echo
echo "============================================================"
echo
echo "$(printf '%2d' $step). Monitor Stack update"
echo
echo "============================================================"
echo
echo "Commands:"
echo
echo "$statement"
echo
echo "$statement2"

if [ "$(aws cloudformation describe-stacks --stack-name $environment-$application \
                                           --query 'Stacks[].StackStatus' \
                                           --profile $profile --region $region --output text 2> /dev/null)" = "UPDATE_COMPLETE" ]; then
    echo
    tput rev
    echo "Already Complete!"
    tput sgr0

    next 50

else
    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        attempt=0
        seconds=$update_default
        while ((attempt++ <= update_attempts)); do
            echo
            echo "$run_statement2"
            eval "$eval_statement2"

            status=$(aws cloudformation describe-stacks --stack-name $environment-$application \
                                                        --query 'Stacks[].StackStatus' \
                                                        --profile $profile --region $region --output text 2> /dev/null)
            if [ -z "$status" -o "$status" = "UPDATE_COMPLETE" -o "$status" = "UPDATE_FAILED" -o "$status" = "ROLLBACK_COMPLETE" ]; then
                break
            else
                echo
                echo -n "Not finished ($status). Waiting $seconds seconds..."
                sleep $seconds
                echo " Done"
            fi
        done

        next
    fi
fi


((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stacks --query 'Stacks[].[StackName,StackStatus]' \\
                                   --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'} 2> /dev/null"

if [ $verbose = 1 ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). List Resulting Stacks"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        next
    fi
fi


((++step))
read -r -d '' statement << EOS
aws cloudformation describe-stack-resources --stack-name $environment-$application \\
                                            --query 'StackResources[].[ResourceType,LogicalResourceId,PhysicalResourceId,ResourceStatus]' \\
                                            --profile $profile --region $region --output table
EOS
run_statement=$(echo "$statement" | sed -e '1s/^/# /;2,$ s/^/> /')
eval_statement="${statement//\\$'\n'} 2> /dev/null"

if [ $verbose = 1 ]; then
    clear
    echo
    echo "============================================================"
    echo
    echo "$(printf '%2d' $step). List Resulting Stack Resources"
    echo
    echo "============================================================"
    echo
    echo "Commands:"
    echo
    echo "$statement"

    run 50

    if [ $choice = y ]; then
        echo
        echo "$run_statement"
        eval "$eval_statement"

        next
    fi
fi

end=$(date +%s)

echo
case $(uname) in
  Darwin)
    echo "(time: $(date -u -r $((end-start)) +"%T"))";;
  *)
    echo "(time: $(date -u -d @$((end-start)) +"%T"))";;
esac
