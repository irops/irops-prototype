        "RouteTableId" : { "Fn::ImportValue" : { "Fn::Sub" : "${BuildVPCStackName}-PublicRouteTable" }},
        "VpcPeeringConnectionId" : { "Ref" : "BuildVPCPeeringConnection" }
      },
      "Condition" : "PeerToBuildVPC"
    },

    "PrivateCoreToBuildRouteA" : {
