      "Properties" : {
        "DestinationCidrBlock" : { "Fn::ImportValue" : { "Fn::Sub" : "${CoreVPCStackName}-VPCNetwork" }},
        "RouteTableId" : { "Fn::ImportValue" : { "Fn::Sub" : "${BuildVPCStackName}-PrivateRouteTableA" }},
