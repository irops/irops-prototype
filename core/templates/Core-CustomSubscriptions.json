      "Type" : "AWS::SNS::Subscription",
      "Properties" : {
        "TopicArn" : { "Fn::ImportValue" : { "Fn::Sub" : "${StandardTopicsStackName}-AdministratorsTopic" }},
        "Protocol" : "email",
        "Endpoint" : "mcrawford@hpe.com"
      }
    },

